            Console.WriteLine("6 - Comprar PorÃ§Ã£o de Cura (recupera 25 vida) - 30 Ouro");
            Console.WriteLine("0 - Voltar");

            string escolhaLoja = Console.ReadLine();
            switch (escolhaLoja)
            {
                case "1":
                    if (couro > 0)
                    {
                        int valor = couro * 6;
                        ouro += valor;
                        Console.WriteLine($"VocÃª vendeu {couro} couro(s) por {valor} ouro.");
                        couro = 0;
                    }
                    else
                    {
                        Console.WriteLine("VocÃª nÃ£o tem couro para vender.");
                    }
