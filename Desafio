                        Console.WriteLine("Ouro insuficiente para comprar o escudo.");
                    }
                    break;

                case "6":
                    if (ouro >= 30)
                    {
                        temPorcaoDeCura = true;
                        ouro -= 30;
                        Console.WriteLine("ğŸµ VocÃª comprou uma PorÃ§Ã£o de Cura (recupera 25 de vida)!");
                    }
                    else
                    {
                        Console.WriteLine("Ouro insuficiente para comprar a porÃ§Ã£o de cura.");
                    }
                    break;

                case "0":
                    break;

                default:
                    Console.WriteLine("âŒ OpÃ§Ã£o invÃ¡lida.");
                    break;
            }
            break;

        case "0":
            jogando = false;
            Console.WriteLine("ğŸ Saindo do jogo...");
            break;

        default:
            Console.WriteLine("âŒ OpÃ§Ã£o invÃ¡lida.");
            break;
    }

    Console.WriteLine("\nPressione qualquer tecla para continuar...");
