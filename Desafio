                case "2":
                    if (presas > 0)
                    {
                        int valor = presas * 10;
                        ouro += valor;
                        Console.WriteLine($"VocÃª vendeu {presas} presa(s) por {valor} ouro.");
                        presas = 0;
                    }
                    else
                    {
                        Console.WriteLine("VocÃª nÃ£o tem presas para vender.");
                    }
                    break;

                case "3":
                    if (garras > 0)
                    {
                        int valor = garras * 15;
                        ouro += valor;
                        Console.WriteLine($"VocÃª vendeu {garras} garra(s) por {valor} ouro.");
                        garras = 0;
                    }
                    else
                    {
                        Console.WriteLine("VocÃª nÃ£o tem garras para vender.");
                    }
                    break;

                case "4":
                    if (ouro >= 50)
                    {
                        temEscudo = true;
                        ouro -= 50;
                        Console.WriteLine("ğŸ›¡ï¸ VocÃª comprou um Escudo (50% de proteÃ§Ã£o contra dano)!");
                    }
                    else
