double vida = 100;
int ouro = 0;
int couro = 0, presas = 0, garras = 0;
bool temEscudo = false;
bool temPorcaoDeCura = false;
bool jogando = true;
Random random = new Random();

void ExibirStatus()
{
    Console.Clear();
    Console.WriteLine("=== STATUS DO AVENTUREIRO ===");
    Console.WriteLine($"ğŸ’– Vida: {vida}/100 | ğŸª™ Ouro: {ouro}");
    Console.WriteLine($"ğŸ„ Couro: {couro} | ğŸ¾ Presas: {presas} | ğŸ¦´ Garras: {garras}");
    Console.WriteLine($"ğŸ›¡ï¸ Escudo: {(temEscudo ? "Sim" : "NÃ£o")}");
    Console.WriteLine($"ğŸµ PorÃ§Ã£o de Cura: {(temPorcaoDeCura ? "Sim" : "NÃ£o")}");
    Console.WriteLine("===========================\n");
}

void BatalhaComBoss(string nomeBoss, int vidaBoss, int danoBoss)
{
    Console.WriteLine($"ğŸŒŸ Um terrÃ­vel BOSS apareceu: {nomeBoss}! Ele tem {vidaBoss} de vida.");
    Console.WriteLine($"âš”ï¸ {nomeBoss} causa {danoBoss} de dano!");

    while (vida > 0 && vidaBoss > 0)
    {
        ExibirStatus();

        Console.WriteLine("=== STATUS DO BOSS ===");
        Console.WriteLine($"ğŸ‘¹ {nomeBoss} - Vida: {vidaBoss} | Dano: {danoBoss}");
        Console.WriteLine("======================\n");

        Console.WriteLine("\nEscolha uma aÃ§Ã£o:");
        Console.WriteLine("1 - Atacar BOSS âš”ï¸");
        Console.WriteLine("2 - Fugir da batalha ğŸƒ");
        if (temPorcaoDeCura)
        {
            Console.WriteLine("3 - Usar porÃ§Ã£o de cura ğŸµ (recupera 25 de vida)");
        }

        string escolhaBatalha = Console.ReadLine();

        if (escolhaBatalha == "1")
        {
            int danoAtaque = 10 + random.Next(5);
            vidaBoss -= danoAtaque;
            Console.WriteLine($"VocÃª atacou {nomeBoss} e causou {danoAtaque} de dano!");

            if (vidaBoss <= 0)
            {
                Console.WriteLine($"ğŸ‰ VocÃª derrotou {nomeBoss}! Ganhou um grande prÃªmio!");
                ouro += 100;
                couro += 5;
                presas += 3;
                garras += 2;
                break;
            }

            danoBoss = random.Next(10, 20);

            if (random.Next(100) < 10)
            {
                int danoCritico = danoBoss * 2;
                Console.WriteLine($"ğŸ”¥ O BOSS causou um DANO CRÃTICO de {danoCritico}!");
                danoBoss = danoCritico;
            }

            if (temEscudo && random.Next(100) < 50)
            {
                Console.WriteLine("ğŸ›¡ï¸ O escudo reduziu o dano do BOSS em 50%!");
                danoBoss /= 2;
            }

            vida -= danoBoss;
            Console.WriteLine($"{nomeBoss} atacou e causou {danoBoss} de dano.");

            if (vida <= 0)
            {
                Console.WriteLine("ğŸ’€ VocÃª foi derrotado... NÃ£o conseguiu sobreviver!");
            }
        }
        else if (escolhaBatalha == "2")
        {
            Console.WriteLine("ğŸƒ VocÃª fugiu da batalha contra o BOSS!");
            break;
        }
        else if (escolhaBatalha == "3" && temPorcaoDeCura)
        {
            vida += 25;
            if (vida > 100) vida = 100;
            temPorcaoDeCura = false;
            Console.WriteLine("ğŸµ VocÃª usou a porÃ§Ã£o de cura e recuperou 25 de vida.");
        }
        else
        {
            Console.WriteLine("âŒ OpÃ§Ã£o invÃ¡lida, tente novamente.");
        }

        Console.WriteLine("\nPressione qualquer tecla para continuar...");
        Console.ReadKey();
    }
}

while (jogando && vida > 0)
{
    ExibirStatus();

    Console.WriteLine("Escolha uma aÃ§Ã£o:");
